<div class="container">
	<div class="row">
		<div class="col-xs-1">
		</div>
		<div class="col-xs-11">
			<h1>Followers</h1>
				<table class="table table-striped">
					<tbody>
					<% @users.each do |user| %>
						<tr>
						<td><%= attachment_image_tag user, :profile_image, :fill, 80, 80, format: 'jpeg', class: "", fallback: "no_image.jpg" %></td>
						<td><%= user.name %></td>
						<td>

      					</td>
						<td><%= render 'relationships/follow_button', user: user %></td>
			      		<td>
			      		<%= link_to "Show", user_path(user.id) %>
			      		</td>
			      		</tr>
			    	<% end %>
					</tbody>
				</table>
		</div>
	</div>
</div>
